{
  "extends": "expo/tsconfig.base",
  // "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "rootDir": "src",
    "noUnusedParameters": true,
    // "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@assets/*": ["./src/assets/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": ["apps/**/*", ".expo/types/**/*.ts", "expo-env.d.ts", "src/"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts/**/*",
    "scripts",
    "hooks"
  ]
}
